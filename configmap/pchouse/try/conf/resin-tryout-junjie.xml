<resin xmlns="http://caucho.com/ns/resin" 
	xmlns:resin="http://caucho.com/ns/resin/core">
	<log name="" level="info" path="stdout:" />
	<cluster id="app-tier">
		<server id="" port="6801">
			<http port="8080" />
			<jvm-arg>-Xmx256m</jvm-arg>
			<jvm-arg>-Xss1m</jvm-arg>
			<jvm-arg>-Xdebug</jvm-arg>
			<jvm-arg>-Dcom.sun.management.jmxremote</jvm-arg>
			<jvm-arg>-XX:MaxPermSize=256m</jvm-arg>
			<jvm-arg>-Xnoagent</jvm-arg>
			<jvm-arg>-Djava.compiler=NONE</jvm-arg>
			<jvm-arg>-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=11125
			</jvm-arg>
		</server>

		<resin:import path="${resin.home}/conf/app-default.xml" />
		<resin:import path="D:\CloudProject\try\conf\r-resin-conf.xml"/>
		<resin:import path="D:\CloudProject\try\conf\database.xml"/>

		<host id="" root-directory=".">
			<web-app id="/" root-directory="D:\CloudProject\try\src\main\webapp" lazy-init="false">
				<prologue>
					<class-loader>
						<compiling-loader path="D:\CloudProject\try\target\tryout-2.0\WEB-INF\classes"/>
						<library-loader path="D:\CloudProject\try\target\tryout-2.0\WEB-INF\lib"/>
					</class-loader>
				</prologue>
			</web-app>
		</host>

		<env-entry>
			<description>System Properties Location</description>
			<env-entry-name>props</env-entry-name>
			<env-entry-type>java.lang.String</env-entry-type>
			<env-entry-value>D:\CloudProject\try\conf\tryout.properties</env-entry-value>
		</env-entry>
	</cluster>
</resin>