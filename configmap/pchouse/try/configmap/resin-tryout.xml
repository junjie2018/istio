<resin xmlns="http://caucho.com/ns/resin" 
	xmlns:resin="http://caucho.com/ns/resin/core">
	<log name="" level="info" path="stdout:" />
	<cluster id="app-tier">
		<server id="" port="6801">
			<http port="8080" />
			<jvm-arg>-Xmx256m</jvm-arg>
			<jvm-arg>-Xss1m</jvm-arg>
			<jvm-arg>-Xdebug</jvm-arg>
			<jvm-arg>-Dcom.sun.management.jmxremote</jvm-arg>
			<jvm-arg>-XX:MaxPermSize=256m</jvm-arg>
			<jvm-arg>-Xnoagent</jvm-arg>
			<jvm-arg>-Djava.compiler=NONE</jvm-arg>
			</jvm-arg>
		</server>

		<resin:import path="/data/conf/app-default.xml" />
		<resin:import path="/data/conf/conf\r-resin-conf.xml"/>

		<host id="" root-directory=".">
			<web-app id="/" root-directory="/data/application" lazy-init="false">
			<prologue>
				<class-loader>
					<compiling-loader path="/data/application/WEB-INF/classes"/>
					<library-loader path="/data/application/WEB-INF/lib"/>
				</class-loader>
			</prologue>
			</web-app>
		</host>	

		<!-- 等待调整 -->
		<database ping='true' ping-table='dual'>
			<jndi-name>jdbc/pchouse_try</jndi-name>
			<driver type="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<url>jdbc:mysql://192.168.75.99:3307/house_tryout?useUnicode=true&amp;characterEncoding=utf-8</url>
				<user>house_tryout</user>
				<password>house_tryout</password>
			</driver>
			<prepared-statement-cache-size>8</prepared-statement-cache-size>
			<max-connections>20</max-connections>
			<max-idle-time>30s</max-idle-time>
		</database>

		<env-entry>
			<description>System Properties Location</description>
			<env-entry-name>props</env-entry-name>
			<env-entry-type>java.lang.String</env-entry-type>
			<env-entry-value>/data/conf/tryout.properties</env-entry-value>
		</env-entry>
	</cluster>
</resin>